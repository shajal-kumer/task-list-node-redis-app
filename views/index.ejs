<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Tasks list App by using Redis Database</title>
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <link rel="stylesheet" href="https://bootswatch.com/4/journal/bootstrap.min.css">
        <style>
            body {
                font-family: 'Roboto', sans-serif;
                font-size: 18px;
                line-height: 1.8
            }

            .del:checked+span {
                color: red;
            }

            .task-list {
                list-style: none;
                margin: 0;
                padding: 0
            }

        </style>

    </head>

    <body>

        <div class="container">
            <div class="row">
                <div class="col-6 offset-3">
                    <div class="text-center">
                        <h1> <%= title %></h1>
                        <p>Build with node.js and redis</p>
                    </div>
                    <form action="/task/add" method="POST" class="mb-3 mt-3">
                        <div class="form-group">
                            <h3 for="task">Add Task</h3>
                            <input type="text" name="task" class="form-control" placeholder="Add new task">
                        </div>
                        <input type="submit" class="btn btn-primary btn-block" value="Submit">
                    </form>
                    <br>
                    <form action="/task/delete" method="POST">
                        <ul class="task-list form-group">
                            <% tasks.forEach(task => { %>
                            <li class="form-group form-check">
                                <label>
                                    <input type="checkbox" name="tasks" class="del form-check-input"
                                        value="<%= task %>">
                                    <span class="form-check-label"><%= task %></span>
                            </li>
                            </label>

                            <% }) %>
                        </ul>
                        <input type="submit" class="btn btn-primary" value="Delete">

                    </form>
                    <br><br>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Next Business call</h5>
                            Name: <%= call.name %><br>
                            Company: <%= call.company %><br>
                            Phone: <%= call.phone %><br>
                            Date & Time: <%= call.time %><br>
                        </div>
                    </div>

                    <br><br>
                    <h3>Edit Next Call</h3>
                    <form action="/call/add" method="POST">
                        <div class="form-group">
                            <label> Contact Name: </label>
                            <input type="text" name="name" class="form-control" placeholder="Tasks name">
                        </div>
                        <div class="form-group">
                            <label> Company Name: </label>
                            <input type="text" name="company" class="form-control" placeholder="Company Name">
                        </div>

                        <div class="form-group">
                            <label> Phone: </label>
                            <input type="text" name="phone" class="form-control" placeholder="Phone">
                        </div>

                        <div class="form-group">
                            <label> Day & Time: </label>
                            <input type="date" name="time" class="form-control" placeholder="Time">
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-block" value="Submit">
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </body>

</html>
